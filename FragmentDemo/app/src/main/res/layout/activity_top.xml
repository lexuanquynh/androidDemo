<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:id="@+id/editTopImageText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editBottomImageText"
        android:layout_below="@+id/editTopImageText"
        android:layout_alignStart="@+id/editTopImageText" />

    <Button
        android:text="Apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonApply"
        android:layout_below="@+id/editBottomImageText"
        android:layout_alignEnd="@+id/editBottomImageText"
        android:layout_marginEnd="59dp" />
</RelativeLayout>